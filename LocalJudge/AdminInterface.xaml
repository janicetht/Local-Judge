<Window x:Class="LocalJudge.AdminInterface"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LocalJudge"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminInterface" Background="AliceBlue">

    <Grid>
        <Button x:Name="Logout_Button" Content="Logout" FontSize="14" HorizontalAlignment="Left" Margin="701,25,0,0" VerticalAlignment="Top" Width="60" Height="26" Click="Logout_Button_Click"/>
        <Button x:Name="Statistics_Button" Content="Statistics" FontSize="16" HorizontalAlignment="Left" Margin="350,157,0,0" VerticalAlignment="Top" Height="70" Width="130" Click="Statistics_Button_Click"/>
        <Button x:Name="Problems_Button" Content="Problems" FontSize="16" HorizontalAlignment="Left" Margin="500,157,0,0" VerticalAlignment="Top" Height="70" Width="130" Click="Problems_Button_Click"/>
        <Button x:Name="CreateProblem_Button" Content="Create Problem" FontSize="16" HorizontalAlignment="Left" Margin="200,157,0,0" VerticalAlignment="Top" Height="70" Width="130" Click="CreateProblem_Button_Click"/>
        <Label Content="Admin Page" FontSize="14" HorizontalAlignment="Left" Margin="44,25,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
