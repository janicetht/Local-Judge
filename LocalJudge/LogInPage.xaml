<Window x:Class="LocalJudge.LogInPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalJudge"
        mc:Ignorable="d"
        Title="LogInPage" Height="450" Width="800" Background="AliceBlue">
    <Grid>
        <Button x:Name="Log_In_Button" Content="Log In" HorizontalAlignment="Left" Margin="447,241,0,0" VerticalAlignment="Top" Width="51" Background="LightBlue" Click="Log_In_Button_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="261,158,0,0" Text="Username:" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="261,199,0,0" Text="Password:" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="Username_Textbox" HorizontalAlignment="Left" Margin="387,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="Passwordbox" HorizontalAlignment="Left" Margin="387,197,0,0" PasswordChar="*" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="261,96,0,0" Text="THT020 Local Judge" FontSize="16" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Window>
